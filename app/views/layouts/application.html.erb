</div>

    <div class="container">
      <div class="row">
        <div class="col-lg-9">
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
        <div class="col-lg-3">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">Publicidad</li>
              <li><%= link_to image_tag("anuncio1.jpg", :class=>"img-responsive img-rounded anuncio", :alt=>"Pepsi Twist"), "/path1"  %></li>
              <li><%= link_to image_tag("anuncio2.jpg", :class=>"img-responsive img-rounded anuncio", :alt=>"Nike Training"), "/path1"  %></li>
